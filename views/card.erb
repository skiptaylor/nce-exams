<script src="/js/cards.js"></script>

<div class="row">
	<div class="span12">
		<h2 class="visible-phone">
			<%= params[:exam] %> Flash Cards
			<small><%= params[:chapter] %></small>
		</h2>
		<p class="pull-right">
			<a href="/<%= params[:exam].downcase %>/glossary" class="btn btn-info">Chapters</a> &nbsp; 
			<a href="<%= request.url %>" class="btn btn-success">Start over</a>
		</p>
		<h1 class="hidden-phone">
			<%= params[:exam] %> Flash Cards
			<small><%= params[:chapter] %></small>
		</h1>
		
	</div>
</div>

<hr />

<% @cards.each_with_index do |card, i| %>

	<div class="row current-card" style="<%= hidden unless i == 0 %>">
		<div class="span12 hidden-phone">
			<div class="row">
				<div class="span2">
					<p><a href="#" class="last pull-right" style="<%= hidden if i == 0 %>"><img src="/img/arrow-left.png" /></a></p>
				</div>
				<div class="span8">
					<div class="flashcard" style="cursor: pointer;">
				  	<center><h2><%= card.term %></h2></center>
				  	<hr style="margin: 0;" />
				  	<span class="definition">
						
					  	<span style="font-size: 1.1em; line-height: 1.6em;"><%= markdown card.short_def %></span>
						<hr />
						<small style="color: gray;"><%= markdown card.definition %></small>
						
					</span>
				  </div>
				  <br />
				  <h4 style="text-align: center; color: #ff2c2c;"><i  style=" margin-top: 5px; font-size: 3em;" class="icon-hand-up"></i> &nbsp; <strong>Click card to show and hide definition</strong> &nbsp; <i  style=" margin-top: 5px; font-size: 3em;" class="icon-hand-up"></i></h4>
				  <p><center><strong>Click arrow at top right to go to next flash card or top left to go to previous flash card.</strong></center></p>
				</div>
				<div class="span2">
					<a href="#" class="next"><img src="/img/arrow-right.png" /></a>
				</div>
			</div>
			</div>
		  
		
		
		<div class="span12 visible-phone">	
			<div class="row">
				<div class="span12">
					
					<a href="#" class="last pull-left btn btn-mini" style="<%= hidden if i == 0 %>">Previous</a>
					<a href="#" class="next pull-right btn btn-mini">Next</a>
					<br /><br />
					
			  	<div class="flashcard">
				  	<center><h2><%= card.term %></h2></center>
				  	<hr style="margin: 0;" />
				  	<span class="definition">
					  	<%= markdown card.short_def %>
					  </span>
				  </div>
				  
				  <br />
				  <p style="text-align: center;"><img src="/img/arrow-reveal.png" /></p>
				  
				</div>
			</div>
		</div>
	</div>

<% end %>

<div class="row current-card" style="display: none;">
	<div class="span6 offset3">
		<h4 style="text-align: center;">No more cards</h4><br /><br />
	</div>
</div>


				